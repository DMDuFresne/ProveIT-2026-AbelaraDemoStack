EDGE_GATEWAY_IGNITION_GATEWAY_NETWORK_REQUIRESSL=false
EDGE_GATEWAY_IGNITION_GATEWAY_NETWORK_ALLOWINCOMING=true
EDGE_GATEWAY_GATEWAY_MODULES_ENABLED=all
EDGE_GATEWAY_GATEWAY_INIT_MEMORY=512m
EDGE_GATEWAY_GATEWAY_MAX_MEMORY=2048m
EDGE_GATEWAY_IGNITION_ACTIVATION_TOKEN=
