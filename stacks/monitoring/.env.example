# =============================================================================
# ProveIT 2026 Demo Stack - Monitoring - Environment Variables
# =============================================================================
# Description: Environment variables for the Monitoring stack services
# 
# Copy this file to .env and update the values as needed.
# Never commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Common Configuration
# -----------------------------------------------------------------------------
MONITORING_TZ=America/Chicago

# -----------------------------------------------------------------------------
# Uptime Kuma Configuration
# -----------------------------------------------------------------------------
MONITORING_UPTIME_KUMA_VERSION=latest
MONITORING_UPTIME_KUMA_PORT=3001

# -----------------------------------------------------------------------------
# Nginx Reverse Proxy Configuration
# -----------------------------------------------------------------------------
MONITORING_NGINX_VERSION=alpine
MONITORING_NGINX_PORT=8085

# -----------------------------------------------------------------------------
# Cloudflare Tunnel Configuration
# -----------------------------------------------------------------------------
MONITORING_CLOUDFLARE_TUNNEL_TOKEN=
