# =============================================================================
# ProveIT 2026 Demo Stack - MES - Environment Variables
# =============================================================================
# Description: Environment variables for the MES stack services
# 
# Copy this file to .env and update the values as needed.
# Never commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Common Configuration
# -----------------------------------------------------------------------------
MES_TZ=America/Chicago

# -----------------------------------------------------------------------------
# TimescaleDB Configuration
# -----------------------------------------------------------------------------
MES_TIMESCALEDB_VERSION=latest-pg17
MES_POSTGRES_PASSWORD=password
MES_TIMESCALE_PORT=5433

# -----------------------------------------------------------------------------
# PgBouncer Configuration
# -----------------------------------------------------------------------------
MES_PGBOUNCER_VERSION=latest
MES_PGBOUNCER_PORT=6433

# -----------------------------------------------------------------------------
# Ignition Gateway Configuration (Common)
# -----------------------------------------------------------------------------
MES_IGNITION_EDITION=standard
MES_IGNITION_GATEWAY_ADMIN_PASSWORD=password
MES_IGNITION_GATEWAY_ADMIN_PASSWORD_FILE=
MES_GATEWAY_ADMIN_USERNAME=admin
MES_IGNITION_GATEWAY_NETWORK_ENABLED=true
MES_IGNITION_GATEWAY_NETWORK_REQUIRESSL=false
MES_IGNITION_GATEWAY_NETWORK_ALLOWINCOMING=true
MES_DISABLE_QUICKSTART=false

# -----------------------------------------------------------------------------
# MES Backend Ignition Gateway Configuration
# -----------------------------------------------------------------------------
MES_IGNITION_BACKEND_VERSION=8.3.1
MES_IGNITION_MES_BACKEND_GATEWAY_SYSTEM_NAME=ProveIT-Backend
MES_IGNITION_MES_BACKEND_NETWORK_UUID=
MES_GATEWAY_MODULES_ENABLED_BACKEND=com.inductiveautomation.eam,com.inductiveautomation.opcua,com.inductiveautomation.eventstream,com.inductiveautomation.sqlbridge,com.inductiveautomation.jdbc.postgresql
MES_GATEWAY_INIT_MEMORY_BACKEND=1024m
MES_GATEWAY_MAX_MEMORY_BACKEND=4096m
MES_IGNITION_MES_BACKEND_ACTIVATION_TOKEN=
MES_IGNITION_MES_BACKEND_ACTIVATION_TOKEN_FILE=
MES_IGNITION_BACKEND_HTTP_PORT=8090
MES_IGNITION_BACKEND_HTTPS_PORT=8047
MES_IGNITION_BACKEND_GATEWAY_PORT=8062

# -----------------------------------------------------------------------------
# MES Frontend Ignition Gateway Configuration
# -----------------------------------------------------------------------------
MES_IGNITION_FRONTEND_VERSION=8.3.1
MES_IGNITION_MES_FRONTEND_GATEWAY_SYSTEM_NAME=ProveIT-Frontend
MES_IGNITION_MES_FRONTEND_NETWORK_UUID=
MES_GATEWAY_MODULES_ENABLED_FRONTEND=com.inductiveautomation.eam,com.inductiveautomation.opcua,com.inductiveautomation.perspective,com.inductiveautomation.jdbc.postgresql
MES_GATEWAY_INIT_MEMORY_FRONTEND=1024m
MES_GATEWAY_MAX_MEMORY_FRONTEND=4096m
MES_IGNITION_MES_FRONTEND_ACTIVATION_TOKEN=
MES_IGNITION_MES_FRONTEND_ACTIVATION_TOKEN_FILE=
MES_IGNITION_FRONTEND_HTTP_PORT=8088
MES_IGNITION_FRONTEND_HTTPS_PORT=8043
MES_IGNITION_FRONTEND_GATEWAY_PORT=8060

# -----------------------------------------------------------------------------
# Nginx Reverse Proxy Configuration
# -----------------------------------------------------------------------------
MES_NGINX_VERSION=alpine
MES_NGINX_PORT=8083

# -----------------------------------------------------------------------------
# Cloudflare Tunnel Configuration
# -----------------------------------------------------------------------------
MES_CLOUDFLARE_TUNNEL_TOKEN=your-mes-tunnel-token-here
