# =============================================================================
# ProveIT 2026 Demo Stack - SCADA - Environment Variables
# =============================================================================
# Description: Environment variables for the SCADA stack services
# 
# Copy this file to .env and update the values as needed.
# Never commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Common Configuration
# -----------------------------------------------------------------------------
SCADA_TZ=America/Chicago

# -----------------------------------------------------------------------------
# Ignition Gateway Configuration
# -----------------------------------------------------------------------------
SCADA_IGNITION_VERSION=8.3.1
SCADA_IGNITION_EDITION=standard
SCADA_IGNITION_GATEWAY_ADMIN_PASSWORD=password
SCADA_IGNITION_GATEWAY_ADMIN_PASSWORD_FILE=
SCADA_GATEWAY_ADMIN_USERNAME=admin
SCADA_IGNITION_GATEWAY_SYSTEM_NAME=ProveIT-Gateway
SCADA_IGNITION_GATEWAY_NETWORK_UUID=
SCADA_IGNITION_GATEWAY_NETWORK_ENABLED=true
SCADA_IGNITION_GATEWAY_NETWORK_REQUIRESSL=false
SCADA_IGNITION_GATEWAY_NETWORK_ALLOWINCOMING=true
SCADA_GATEWAY_MODULES_ENABLED=com.inductiveautomation.eam,com.inductiveautomation.opcua,com.inductiveautomation.eventstream,com.inductiveautomation.sqlbridge,com.inductiveautomation.jdbc.postgresql,com.inductiveautomation.vision
SCADA_GATEWAY_INIT_MEMORY=512m
SCADA_GATEWAY_MAX_MEMORY=2048m
SCADA_IGNITION_ACTIVATION_TOKEN=
SCADA_IGNITION_ACTIVATION_TOKEN_FILE=
SCADA_DISABLE_QUICKSTART=false
SCADA_IGNITION_GATEWAY_HTTP_PORT=8091
SCADA_IGNITION_GATEWAY_HTTPS_PORT=8046
SCADA_IGNITION_GATEWAY_GATEWAY_PORT=8063
