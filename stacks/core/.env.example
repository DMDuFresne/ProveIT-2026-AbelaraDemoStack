# =============================================================================
# ProveIT 2026 Demo Stack - Core - Environment Variables
# =============================================================================
# Description: Environment variables for the Core stack services
# 
# Copy this file to .env and update the values as needed.
# Never commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Common Configuration
# -----------------------------------------------------------------------------
CORE_TZ=America/Chicago

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
CORE_POSTGRES_VERSION=16-alpine
CORE_POSTGRES_PASSWORD=password
CORE_POSTGRES_PORT=5432
CORE_POSTGRES_CORE_PASSWORD=password
CORE_POSTGRES_SCADA_PASSWORD=password
CORE_POSTGRES_MES_FRONTEND_PASSWORD=password
CORE_POSTGRES_MES_BACKEND_PASSWORD=password
CORE_POSTGRES_MONITORING_PASSWORD=password

# -----------------------------------------------------------------------------
# PgBouncer Configuration
# -----------------------------------------------------------------------------
CORE_PGBOUNCER_VERSION=latest
CORE_PGBOUNCER_PORT=6432

# -----------------------------------------------------------------------------
# Ignition Gateway Configuration
# -----------------------------------------------------------------------------
CORE_IGNITION_VERSION=8.3.1
CORE_IGNITION_EDITION=standard
CORE_IGNITION_GATEWAY_ADMIN_PASSWORD=password
CORE_IGNITION_GATEWAY_ADMIN_PASSWORD_FILE=
CORE_GATEWAY_ADMIN_USERNAME=admin
CORE_IGNITION_GATEWAY_SYSTEM_NAME=ProveIT-Gateway
CORE_IGNITION_GATEWAY_NETWORK_UUID=
CORE_IGNITION_GATEWAY_NETWORK_ENABLED=true
CORE_IGNITION_GATEWAY_NETWORK_REQUIRESSL=false
CORE_IGNITION_GATEWAY_NETWORK_ALLOWINCOMING=true
CORE_GATEWAY_MODULES_ENABLED=com.inductiveautomation.eam,com.inductiveautomation.opcua,com.inductiveautomation.eventstream,com.inductiveautomation.webdev,com.inductiveautomation.jdbc.postgresql,com.inductiveautomation.historian,com.flowsoftware.timebase.historian,com.highbyte.intelligencehub.ignition
CORE_ACCEPT_MODULE_LICENSES=com.flowsoftware.timebase.historian,com.highbyte.intelligencehub.ignition
CORE_ACCEPT_MODULE_CERTS=com.flowsoftware.timebase.historian,com.highbyte.intelligencehub.ignition
CORE_GATEWAY_INIT_MEMORY=512m
CORE_GATEWAY_MAX_MEMORY=2048m
CORE_IGNITION_ACTIVATION_TOKEN=
CORE_IGNITION_ACTIVATION_TOKEN_FILE=
CORE_DISABLE_QUICKSTART=false
CORE_IGNITION_GATEWAY_HTTP_PORT=8089
CORE_IGNITION_GATEWAY_HTTPS_PORT=8045
CORE_IGNITION_GATEWAY_GATEWAY_PORT=8061

