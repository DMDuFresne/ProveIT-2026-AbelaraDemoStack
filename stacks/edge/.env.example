# =============================================================================
# ProveIT 2026 Demo Stack - Edge - Environment Variables
# =============================================================================
# Description: Environment variables for the Edge stack services
#
# Copy this file to .env and update the values as needed.
# Never commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Common Configuration
# -----------------------------------------------------------------------------
EDGE_TZ=America/Chicago

# -----------------------------------------------------------------------------
# Ignition Edge Gateway Configuration
# -----------------------------------------------------------------------------
EDGE_IGNITION_VERSION=8.3.1
EDGE_IGNITION_EDITION=edge
EDGE_IGNITION_GATEWAY_ADMIN_PASSWORD=password
EDGE_IGNITION_GATEWAY_ADMIN_PASSWORD_FILE=
EDGE_GATEWAY_ADMIN_USERNAME=admin
EDGE_IGNITION_GATEWAY_SYSTEM_NAME=ProveIT-Edge-Gateway
EDGE_IGNITION_GATEWAY_NETWORK_UUID=
EDGE_IGNITION_GATEWAY_NETWORK_ENABLED=true
EDGE_IGNITION_GATEWAY_NETWORK_REQUIRESSL=false
EDGE_IGNITION_GATEWAY_NETWORK_ALLOWINCOMING=true
EDGE_GATEWAY_MODULES_ENABLED=all
EDGE_GATEWAY_INIT_MEMORY=512m
EDGE_GATEWAY_MAX_MEMORY=2048m
EDGE_IGNITION_ACTIVATION_TOKEN=
EDGE_IGNITION_ACTIVATION_TOKEN_FILE=
EDGE_DISABLE_QUICKSTART=false
EDGE_IGNITION_GATEWAY_HTTP_PORT=8092
EDGE_IGNITION_GATEWAY_HTTPS_PORT=8048
EDGE_IGNITION_GATEWAY_GATEWAY_PORT=8064

# -----------------------------------------------------------------------------
# Fuuz Device Gateway Configuration
# -----------------------------------------------------------------------------
EDGE_FUUZ_VERSION=2025.11.3.686
EDGE_FUUZ_NODE_ENV=production
EDGE_FUUZ_GATEWAY_AUTO_UPDATE=false
EDGE_FUUZ_GATEWAY_LOG_LEVEL=verbose
EDGE_FUUZ_GATEWAY_LOG_RETENTION_DAYS=30
EDGE_FUUZ_GATEWAY_PORT=5500
EDGE_FUUZ_GATEWAY_LISTEN_ADDRESS=0.0.0.0
EDGE_FUUZ_GATEWAY_PORT_RANGE=5500-5550

# -----------------------------------------------------------------------------
# Nginx Reverse Proxy Configuration
# -----------------------------------------------------------------------------
EDGE_NGINX_VERSION=alpine
EDGE_NGINX_PORT=8082

