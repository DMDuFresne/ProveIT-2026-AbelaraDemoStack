# -----------------------------------------------------------------------------
# Common Configuration
# -----------------------------------------------------------------------------
EDGE_ENTERPRISE_TZ=America/Chicago

# -----------------------------------------------------------------------------
# Fuuz Device Gateway Configuration
# -----------------------------------------------------------------------------
EDGE_ENTERPRISE_FUUZ_VERSION=2025.11.3.686
EDGE_ENTERPRISE_NODE_ENV=production
EDGE_ENTERPRISE_FUUZ_GATEWAY_AUTO_UPDATE=false
EDGE_ENTERPRISE_FUUZ_GATEWAY_LOG_LEVEL=verbose
EDGE_ENTERPRISE_FUUZ_GATEWAY_LOG_RETENTION_DAYS=30
EDGE_ENTERPRISE_FUUZ_GATEWAY_PORT=5500
EDGE_ENTERPRISE_FUUZ_GATEWAY_LISTEN_ADDRESS=0.0.0.0
EDGE_ENTERPRISE_FUUZ_GATEWAY_PORT_RANGE=5500-5550

