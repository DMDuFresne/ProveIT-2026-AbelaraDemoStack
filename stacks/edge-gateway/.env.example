EDGE_GATEWAY_IGNITION_EDITION=edge
EDGE_GATEWAY_IGNITION_GATEWAY_ADMIN_PASSWORD=password
EDGE_GATEWAY_IGNITION_GATEWAY_ADMIN_PASSWORD_FILE=
EDGE_GATEWAY_GATEWAY_ADMIN_USERNAME=admin
