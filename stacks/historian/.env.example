# =============================================================================
# ProveIT 2026 Demo Stack - Historian - Environment Variables
# =============================================================================
# Description: Environment variables for the Historian stack services
# 
# Copy this file to .env and update the values as needed.
# Never commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Common Configuration
# -----------------------------------------------------------------------------
HISTORIAN_TZ=America/Chicago

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
HISTORIAN_NETWORK_NAME=timebase-network

# -----------------------------------------------------------------------------
# Timebase Historian Configuration
# -----------------------------------------------------------------------------
HISTORIAN_HISTORIAN_TAG=latest
HISTORIAN_HISTORIAN_HOSTNAME=historian
HISTORIAN_HISTORIAN_PORT=4511

# -----------------------------------------------------------------------------
# Timebase Explorer Configuration
# -----------------------------------------------------------------------------
HISTORIAN_EXPLORER_TAG=latest
HISTORIAN_EXPLORER_HOSTNAME=explorer
HISTORIAN_EXPLORER_PORT=4531

# -----------------------------------------------------------------------------
# Timebase Collector Configuration
# -----------------------------------------------------------------------------
HISTORIAN_COLLECTOR_TAG=latest

# Collector 01 Configuration
HISTORIAN_COLLECTOR_01_HOSTNAME=collector-01
HISTORIAN_COLLECTOR_01_ACTIVE=false
HISTORIAN_COLLECTOR_01_PORT=4521

# Collector 02 Configuration
HISTORIAN_COLLECTOR_02_HOSTNAME=collector-02
HISTORIAN_COLLECTOR_02_ACTIVE=false
HISTORIAN_COLLECTOR_02_PORT=4522

# -----------------------------------------------------------------------------
# Nginx Reverse Proxy Configuration
# -----------------------------------------------------------------------------
HISTORIAN_NGINX_VERSION=alpine
HISTORIAN_NGINX_PORT=8086

# -----------------------------------------------------------------------------
# Cloudflare Tunnel Configuration
# -----------------------------------------------------------------------------
HISTORIAN_CLOUDFLARE_TUNNEL_TOKEN=
